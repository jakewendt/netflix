div#menu a, div#menu img {
	display: block;
}
div#menu a { 
	margin: 5px;
	padding: 5px;
	border: 1px solid gray;
	background-color: white;
	text-decoration: none;
}

div#menu {
	display:block;
	float:left;
	height:100%;
	margin:10px 5px 5px;
	position:fixed;
	width:200px;
}
div#content {
	background-color:#FFFFFF;
	border-left:5px double black;
	border-right:5px double black;
